mixin memberForm(member = {})

  form.p3.bg-white.shadow(action=`/staff/${(member._id) ? `${member._id}/edit` : `add`}` method="POST" enctype="multipart/form-data")
    .flex.flex-column.sm-flex-row
      .col-12.sm-col-6.sm-mr3
        .mb2
          label(for="first") First name
          input.block.col-12.field(type="text" id="first" name="nameFirst" value=(member.nameFirst || ''))
        .mb2
          label(for="last") Last name
          input.block.col-12.field(type="text" id="last" name="nameLast" value=(member.nameLast || ''))
        .mb2
          label(for="title") Title
          input.block.col-12.field(type="text" name="title" value=(member.title || ''))
        .mb2
          label(for="bio") Bio
          textarea.block.col-12.field(name="bio")= member.bio || ''
        .mb2
          label(for="photo") Photo
          input.block.col-12.field(type="file" id="photo" name="photo" accept="image/gif, image/png, image/jpeg")
          if member.photo
            img.mt1(src=`/uploads/${member.photo}`, alt=member.name width=150)
      .col-12.sm-col-6
        .mb2
          label(for="url") Website address
          input.block.col-12.field(type="text" name="url" value=(member.url || ''))
        - const socials = ['GitHub', 'Dribbble', 'Twitter', 'LinkedIn']
        each social in socials
          .mb2
            label(for=`${social.toLowerCase()}Url`)= `${social} address`
            //- .input-group-flex
            //-   .input-group-flex__icon-wrapper
            //-     i.black.fa.fa-fw(class=`fa-${social.toLowerCase()}`)
            //-   input.input-group-flex__input(type="text")
            .input-group-position
              i.input-group-position__icon.fa.fa-fw(class=`fa-${social.toLowerCase()}`)
              input.input-group-position__input.field(type="text" name=`${social.toLowerCase()}Url` value=(member[`${social.toLowerCase()}Url`] || ''))
          //- the accept attr here does not disable people from messing with client side dev tools to rm the allowed filetypes, but we protect ourselves against this on the server controller with multerOptions. This accept is useful incase a user tries to upload a non-image like a pdf or psd!
    input.btn.btn-primary.col-12.mt2(type="submit" value="Save â†’")
